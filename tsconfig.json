{
  "compilerOptions": {
    "outDir": "lib/esm",
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
